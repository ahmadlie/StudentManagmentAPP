@using StudentManagment.MVC.Areas.Admin.Models
@model HomePageVM
<div class="container-full">
    <section class="content">
        <div class="row">
            <div class="col-xl-9 col-12">
                <div class="box bg-success">
                    <div class="box-body d-flex p-0">
                        <div class="flex-grow-1 p-30 flex-grow-1 bg-img bg-none-md" style="background-position: right bottom; background-size: auto 100%; background-image: url(https://edulearn-lms-admin-template.multipurposethemes.com/images/svg-icon/color-svg/custom-30.svg)">
                            <div class="row">
                                <div class="col-12 col-xl-7">
                                    <h1 class="mb-0 fw-600">Learn With Effectively With Us!</h1>
                                    <p class="my-10 fs-16 text-white-70">Get 30% off every course on january.</p>
                                    <div class="mt-45 d-md-flex align-items-center">
                                        <div class="me-30 mb-30 mb-md-0">
                                            <div class="d-flex align-items-center">
                                                <div class="me-15 text-center fs-24 w-50 h-50 l-h-50 bg-danger b-1 border-white rounded-circle">
                                                    <i class="fa fa-graduation-cap"></i>
                                                </div>
                                                <div>
                                                    <h5 class="mb-0">Students</h5>
                                                    <p class="mb-0 text-white-70">
                                                        @Model.Students.Count()
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="d-flex align-items-center">
                                                <div class="me-15 text-center fs-24 w-50 h-50 l-h-50 bg-warning b-1 border-white rounded-circle">
                                                    <i class="fa fa-user"></i>
                                                </div>
                                                <div>
                                                    <h5 class="mb-0">Teachers</h5>
                                                    <p class="mb-0 text-white-70">@Model.Teachers.Count()</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-xl-5"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-12">
                <div class="box bg-transparent no-shadow">
                    <div class="box-body p-xl-0 text-center">
                        <h3 class="px-30 mb-20">Have More<br>exam to share?</h3>
                        <a href="/Admin/AdminExam/Create" class="waves-effect waves-light w-p100 btn btn-primary"><i class="fa fa-plus"></i> Create New Exam</a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <a class="box box-link-shadow text-center pull-up" href="javascript:void(0)">
                            <div class="box-body py-5 bg-primary-light px-5">
                                <p class="fw-500 text-primary text-overflow">All Exam</p>
                            </div>
                            <div class="box-body p-10">
                                <h1 class="countnm fs-40 m-0">@Model.Exams.Count()</h1>
                            </div>
                        </a>
                    </div>
                    <div class="col-6">
                        <a class="box box-link-shadow text-center pull-up" href="javascript:void(0)">
                            <div class="box-body py-5 bg-primary-light px-5">
                                <p class="fw-500 text-primary text-overflow">All Student</p>
                            </div>
                            <div class="box-body p-10">
                                <h1 class="countnm fs-40 m-0">@Model.Students.Count()</h1>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-12">
                <div class="box no-shadow mb-0 bg-transparent">
                    <div class="box-header no-border px-0">
                        <h3 class="fw-500 box-title">Exams</h3>                       
                    </div>
                </div>
                <div>
                    @if(Model.Exams.Count()>0)
                    {
                        @foreach (var exam in Model.Exams)
                        {
                            <div class="box mb-15 pull-up">
                                <div class="box-body">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="me-15 bg-warning h-50 w-50 l-h-55 rounded text-center">
                                                <span class="fs-24">@exam.LessonName.Substring(0,1)</span>
                                            </div>
                                            <div class="d-flex flex-column fw-500">
                                                <p class="text-dark hover-warning mb-1 fs-16">@exam.LessonName</p>                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }                 
                </div>
            </div>
            <div class="col-xl-4 col-12">
                <div class="box no-shadow mb-0 bg-transparent">
                    <div class="box-header no-border px-0">
                        <h3 class="fw-500 box-title">Instructors</h3>
                    </div>
                </div>
                <div>
                    @if (Model.Teachers.Count() > 0)
                    {
                        @foreach (var teacher in Model.Teachers)
                        {
                            <div class="box mb-15 pull-up">
                                <div class="box-body">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <div class="me-15 mb-1">
                                                <img src="../../../images/avatar/avatar-1.png" class="bg-primary-light avatar avatar-lg rounded-circle" alt="">
                                            </div>
                                            <div class="d-flex flex-column fw-500">
                                                <p class="text-dark hover-primary mb-1 fs-16">@teacher.FirstName @teacher.LastName</p>                                                
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>         
        </div>
    </section>
</div>
