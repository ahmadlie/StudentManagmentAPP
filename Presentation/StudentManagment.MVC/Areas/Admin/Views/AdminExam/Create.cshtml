@using StudentManagment.Application.Features.Queries.Lesson
@model IList<GetAllLessonQueryResponse>

<div class="container" style="margin-left: 30px; margin-top: 30px;">
    <div class="row">
        <form method="post" asp-action="Create" class="ml-2">
            <div class="col-md-6">
                <div class="row mb-3">
                    <div class="col">
                        <input name="Date" type="datetime-local" class="form-control" placeholder="Select Date" id="dateInput" style="background-color: white;" required>
                    </div>
                    <div class="col">
                        <input name="Price" type="text" class="form-control" placeholder="Price" id="priceInput" style="background-color: white;" required>
                    </div>
                    @if (Model.Count != 0)
                    {
                        <div class="col">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Select Lesson
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    @foreach (var lesson in Model)
                                    {
                                        <li>
                                            <a class="dropdown-item" href="#" onclick="setSelectedLesson('@lesson.Code', '@lesson.Name')">@lesson.Name</a>
                                        </li>
                                    }
                                    <input name="LessonId" id="selectedLessonCodeInput" type="hidden"></input>
                                </ul>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <button type="submit" class="btn btn-success btn-sm">Create</button>
        </form>
    </div>
</div>

<script>
    function setSelectedLesson(LessonCode, LessonName) 
    {
        document.getElementById("selectedLessonCodeInput").value = LessonCode;
        document.getElementById("dropdownButton").innerText = LessonName;
    }
</script>
